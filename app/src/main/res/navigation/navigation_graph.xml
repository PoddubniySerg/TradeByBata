<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/signInFragment"
        android:name="com.test.feature_sign_in.presentation.ui.fragments.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@id/action_signInFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@id/action_signInFragment_to_homeFragment"
            app:destination="@id/page_one_nav_host"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.test.feature_auth.presentation.ui.fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@id/action_loginFragment_to_homeFragment"
            app:destination="@id/page_one_nav_host"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <include app:graph="@navigation/page_one_nav_host" />
    <include app:graph="@navigation/profile_nav_host" />
</navigation>